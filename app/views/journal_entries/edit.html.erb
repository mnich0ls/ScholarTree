<%= form_for @journal_entry, url: {action: 'update'}, html: {class:'journal_entry_form', role:'form'} do |f| %>
    <legend>New Journal Entry</legend>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class:'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :entry %>
        <%= f.text_area :entry, class:'form-control', :style => 'width: 100%; height: 400px;' %>
    </div>

    <div class="form-actions">
        <%= f.submit 'Save', :class => 'btn btn-success btn-sm' %>
        <%= link_to 'Cancel', journal_entry_path(@journal_entry.id), :class => 'btn btn-default btn-sm'%>
    </div>
<% end %>
